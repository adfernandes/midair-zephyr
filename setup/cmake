# -*- mode: bash -*-

set -x
cd "${PROJECT_DIR}" && \
test -e "prj.conf"  && \
rm -rf "_build"     && \
mkdir  "_build"     && \
cd     "_build"     && \
cmake \
    -G"Ninja" \
    -DUSE_PRESETS:BOOL=False \
    -DBOARD="nrf52832_midair" \
    -DBOARD_ROOT="${PROJECT_DIR}" \
    "${PROJECT_DIR}"
set +x
