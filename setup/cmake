# -*- mode: bash -*-

set -xu
cd "${PROJECT_DIR}"      && \
test -e  "prj.conf"      && \
rm   -rf "_build"        && \
mkdir -p "_build/Manual" && \
cd       "_build/Manual" && \
cmake \
    -G"Ninja" \
    -DUSE_PRESETS:BOOL=False \
    -DBOARD="nrf52832_midair" \
    -DBOARD_ROOT="${PROJECT_DIR}" \
    "${PROJECT_DIR}"
set +xu
